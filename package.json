{
    "name": "catshelp",
    "packageManager": "npm@10.8.2",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build:server": "turbo run build --filter=@catshelp/server",
        "build": "turbo run build --force",
        "start:prod": "node build/server/main.js",
        "client": "npm run dev:vite -w @catshelp/client",
        "server": "npm run start:dev -w @catshelp/server",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "migration:run:dev": "ts-node -r tsconfig-paths/register --project apps/server/tsconfig.json ./node_modules/typeorm/cli.js migration:run -d apps/server/src/data-source.ts",
        "migration:run": "node ./node_modules/typeorm/cli.js migration:run -d build/server/data-source.js",
        "migration:create": "cross-var npm run typeorm -- migration:create ./migrations/$npm_config_name"
    },
    "dependencies": {
        "@nestjs/schedule": "^6.0.1",
        "esbuild": "^0.25.11"
    },
    "devDependencies": {
        "cross-var": "^1.1.0",
        "turbo": "^2.5.8"
    }
}