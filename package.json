{
  "name": "catshelp",
  "packageManager": "npm@10.8.2",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build:server": "turbo run build --filter=@catshelp/server",
    "build": "turbo run build",
    "start:prod": "node build/server/main.js",
    "client": "npm run dev:vite -w @catshelp/client",
    "server": "npm run start:dev -w @catshelp/server",
    "migrate": "tsx ./node_modules/typeorm/cli.js -d apps/server/src/data-source.ts migration:run",
    "create-migration": "typeorm migration:create"
  },
  "dependencies": {
    "esbuild": "^0.25.11"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  }
}
